<Window x:Class="CardIdleRemastered.BrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:CardIdleRemastered.Properties"
        xmlns:web="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="{x:Static res:Resources.SteamLogin}" 
        Height="Auto" Width="Auto" 
        WindowStartupLocation="CenterScreen"
        Loaded="BrowserWindowLoaded">
    <Grid>
        <web:WebView2 Name="wbAuth"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      CoreWebView2InitializationCompleted="BrowserInitializationCompleted"
                      NavigationCompleted="BrowserNavigationCompleted"/>
    </Grid>
</Window>
